{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "declaration": true,
        "skipLibCheck": true,
        "types": []
    },
    "exclude": [
      "node_modules",
      "dist",
      "example"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    }
}
